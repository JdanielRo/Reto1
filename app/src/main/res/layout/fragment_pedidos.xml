<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    tools:context=".Pedidos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_plato"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/space_height"
            android:layout_marginTop="@dimen/space_height"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/txtPedidosMenu"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|clip_vertical"
                android:text="@string/menu"
                android:textSize="20sp"
                style="@style/TituloEstilo"/>

            <Switch
                android:id="@+id/switch2"
                android:layout_width="50dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/txtPedidosCarta"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text="@string/carta"
                android:textSize="20sp"
                style="@style/TituloEstilo"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtNombreApartadoPedidos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/space_height"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="@dimen/space_height"
            android:text="@string/menu"
            style="@style/TituloEstilo"
            android:textSize="30dp"/>

        <LinearLayout
            android:id="@+id/linearLayoutScrollPedidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
